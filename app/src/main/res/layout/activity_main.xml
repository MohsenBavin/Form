<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgr"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your account"
        android:textSize="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:fontFamily="@font/timesbi"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/edtFirstName"
        android:hint="First name"
        android:inputType="text"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorhint"
        android:background="@color/colorBackgray"
        android:fontFamily="@font/times"
        android:textSize="20sp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_below="@id/txtCreate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/edtLastName"
        android:hint="Last name"
        android:inputType="text"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBackgray"
        android:fontFamily="@font/times"
        android:textColorHint="@color/colorhint"
        android:textSize="20sp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/edtFirstName"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtEmail"
        android:hint="Email"
        android:textColor="@color/colorWhite"
        android:inputType="textEmailAddress"
        android:background="@color/colorBackgray"
        android:fontFamily="@font/times"
        android:textColorHint="@color/colorhint"
        android:textSize="20sp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/edtLastName"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/edtPhoneNumber"
        android:hint="Phone Number"
        android:textColor="@color/colorWhite"
        android:inputType="phone"
        android:background="@color/colorBackgray"
        android:fontFamily="@font/times"
        android:textColorHint="@color/colorhint"
        android:textSize="20sp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/edtEmail"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/edtAge"
        android:hint="Age"
        android:inputType="number"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBackgray"
        android:fontFamily="@font/times"
        android:textColorHint="@color/colorhint"
        android:textSize="20sp"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@id/edtPhoneNumber"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        />
<Button
    android:id="@+id/btn"
    android:layout_width="150dp"
    android:layout_height="60dp"
    android:text="Next"
    android:textColor="@color/colorWhite"
    android:textSize="40dp"
    android:fontFamily="@font/timesbi"
     android:background="@color/colorPrimary"
    android:layout_below="@id/edtAge"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="70dp"
    />
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tap Next to see your information"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:fontFamily="@font/times"
        android:layout_below="@id/btn"
        android:layout_centerHorizontal="true" />



</RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@drawable/bachgr2">



        <Button
            android:id="@+id/btnExit"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Exit"
            android:background="#ff0008"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"
            android:fontFamily="@font/timesbi"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"/>


    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
